extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= name
        p= desc

      .project-tech-links-box.box
        h6 Technologies
        ul
          each tech in techs
            li= tech
          
        a.btn-link(href=`${liveLink}`, target='_blank') Live Demo
        a.btn-link(href=`${repoLink}`, target='_blank') GitHub Repo

    .project-img-box.box

      img.project-img(src=`${imgOne}`, alt='')
      img.project-img(src=`${imgTwo}`, alt='')
      img.project-img(src=`${imgThree}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
